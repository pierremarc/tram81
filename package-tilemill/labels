/* ---- Cities ------------------------------------------------------ */


#places::city[type='city'][zoom>=8][zoom<=15],
#places::city[type='town'][zoom>11][zoom<=15]{
  text-name:"[name].replace(' - ','_')";  
  text-wrap-width: 1;
  text-wrap-before: true;
  text-wrap-character: '_';

  text-face-name:@place-label;
  text-placement:point;
  text-fill:@place-label-color;
  text-halo-fill:@background-color;
  text-halo-radius:2;
  text-transform: uppercase;
  text-character-spacing: 1.5;



  [zoom<=8] {
    text-size: 6;
    text-halo-radius:1;
  }
  [zoom=9] {
    text-size:7;
    text-wrap-width: 60;
  }
  [zoom=10] {
    text-size:8;
    text-wrap-width: 70;
  }
  [zoom=11] {
    text-size:9;
    text-wrap-width: 80;
  }
  [zoom=12] {
    text-size:14;
    text-wrap-width: 100;
  }
  [zoom=13] {
    text-size:16;
    text-character-spacing: 2.5;
    text-wrap-width: 200;
  }
  [zoom=14] {
    text-size:18;
    text-character-spacing: 4;
    text-wrap-width: 300;
    
  }
  [zoom=15] {
    text-size:20;
    text-character-spacing: 6;
    text-wrap-width: 400;
  }
}


/* ---- Other small places ------------------------------------------ */

