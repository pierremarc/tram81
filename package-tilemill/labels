/* ================================================================== */
/* WATERWAY LABELS
/* ================================================================== */

#waterways-labels[type='river'][zoom>=13],
#waterways-labels[type='canal'][zoom>=13],
#waterways-labels[type='stream'][zoom>=15] {
  text-name: '[name]';
  text-face-name: @water-label;
  text-fill: @water * 0.8;
  text-halo-fill: @background-color;
  text-halo-radius: 2;
  text-placement: line;
  text-min-distance: 450;
  text-size: 10;
  [type='river'][zoom=14],
  [type='canal'][zoom=14],
  [type='stream'][zoom=16] {
    text-name: "[name].replace('([\S\ ])','$1 ')";
  }
  [type='river'][zoom=15],
  [type='canal'][zoom=15] {
    text-size: 10;
    text-name: "[name].replace('([\S\ ])','$1 ')";
  }
  [type='river'][zoom>=16],
  [type='canal'][zoom>=16] {
    text-size: 12;
    text-name: "[name].replace('([\S\ ])','$1 ')";
    text-spacing: 300;
  }
}

/* ================================================================== */
/* ROAD LABELS
/* ================================================================== */

#roads-labels {
  text-name:'[name]';
  text-face-name:@road-label;
  text-placement:line;
  text-fill:@road-label-color;
  text-halo-fill:@background-color;
  text-halo-radius:2;
  text-avoid-edges: true;
  text-min-path-length: 0;
  text-max-char-angle-delta: 0;
  text-spacing: 100;
  text-min-distance: 200;
  text-allow-overlap: false;
  text-transform: uppercase;
  
  [zoom>17] {text-halo-radius:3;}
  [zoom<=19]{text-max-char-angle-delta: 22.5;}
  
  [zoom>=22] {text-size:80; text-character-spacing: 5.0;}
  [zoom=21]  {text-size:60; text-character-spacing: 4.0;}
  [zoom=20]  {text-size:40; text-character-spacing: 3.0;}
  [zoom=19]  {text-size:18; text-character-spacing: 2.6;}
  [zoom=18]  {text-size:12; text-character-spacing: 2.3;}
  [zoom=17]  {text-size:10; text-character-spacing: 2.0;}
  [zoom=16]  {text-size:8; text-character-spacing: 1.6;}
  [zoom<=15] {text-name:'';}
}


